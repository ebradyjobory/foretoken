<% @page_title = "Login" %>

<div class="cus-form">
	<%= form_tag(:action => 'attempt_login') do |f| %>
		<div class="cus-link">
			<%= label_tag(:email, "Email")%>
			<%= text_field_tag(:email) %>
		</div>
		<div class="cus-link">
			<td><%= label_tag(:password, "Password") %>
			<td><%= password_field_tag(:password) %>
		</div>
		<%= submit_tag('Log In', :class => "btn btn-primary cus-btn") %>
	<%end%>
	<p>or</p>
	<%= link_to 'Sign Up', new_user_path, :class => "btn btn-success cus-btn" %>
</div> <!-- .signin -->
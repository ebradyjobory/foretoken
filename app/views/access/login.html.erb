<% @page_title = "Login" %>
	<div class="cus-form">
		<%= form_tag(:action => 'attempt_login') do |f| %>
			<div class="cus-link">
				<%= label_tag(:email, "Email")%>
				<%= text_field_tag(:email) %>
			</div>
			<div class="cus-link">
				<td><%= label_tag(:password, "Password") %></td>
				<td><%= password_field_tag(:password) %></td>
			</div>
			<%= submit_tag('Log In', :class=>'btn btn-default btn-lg') %>
		<%end%>
		<p class="login-or">or</p>
		<%= link_to 'Sign Up', new_user_path, :class=>'btn btn-default btn-lg' %>
	</div> <!-- .signin -->

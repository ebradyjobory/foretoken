<!DOCTYPE html>
<html>
<head>
  <title>Foretoken<%= " | #{@page_title}" if @page_title %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    "https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css", media: 'all', 'data-turbolinks-track' => true  %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <%= link_to("Foretoken", {:controller => 'access', :action => 'index'}, :class => "navbar-brand") %>
    </div>
    <div class="collapse navbar-collapse">
       <ul class="nav navbar-nav">
        <li><%= link_to("About", '#', :id => 'username') %></li>
        <li><%= link_to(session[:profile_name]) if session[:user_id] %></li>
        <li><%= link_to("Logout", {:controller => 'access', :action => 'logout'}) if session[:user_id] %></li>
       </ul>
    </div>
  </div> <!-- .container -->
</nav>
     <div class="container">
      <div class="row">
	     <%= yield %>
	  </div>
	</div>



<script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
</body>
</html>
